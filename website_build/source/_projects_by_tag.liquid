---
layout: _page_template.html
pagination:
    data: projects.records_by_tag
    size: 1
    alias: tag
permalink: "/list/{{tag}}/"
renderData:
    title: "Care Initiatives tagged '{{tag}}': {{ projects.records_by_tag[tag].length }}"
background: soft.5
---

<header class="section hero bgt" style="background-image: url('/img/bg/twnkl.{{background}}.png');">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">{{ renderData.title }}</h1>
        </div>
    </div>
</header>

<main>
    <section class="section container content">
        <div class="columns">
            <section class="column is-9">
                {% include _list_records, records: projects.records_by_tag[tag] %}
            </section>
            <aside class="column is-2 is-offset-1">
                {% include _sidebar_tags %}
            </aside>
        </div>
    </section>
</main>
